{
  "name": "text-part",
  "version": "1.0.0",
  "description": "Parse blobs of text into sections, lines, and highlights.",
  "main": "src/index.js",
  "scripts": {
    "test": "npm-run-all eslint mocha",
    "eslint": "eslint src/**/*.spec.js",
    "mocha": "nyc mocha src/**/*.spec.js"
  },
  "keywords": [
    "transform",
    "text",
    "part",
    "parse"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "no-var": "error"
    }
  },
  "author": "Christopher Jacobs <apexearth@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "regex-foreach": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.10.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.3.0"
  }
}
